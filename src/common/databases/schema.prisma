// This the Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DEV_PRISMA_STUDIO_DB_URL")
}

model Project {
  uuid      String   @unique @db.VarChar(255) @id
  title      String @db.VarChar(255)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  network  String @db.VarChar(255)
  Metrics Metric[]
  @@map("app_projects")
}

model Metric {
  uuid      String  @unique @db.VarChar(255) @id
  path String @db.VarChar(255)
  remote_address  String @db.VarChar(255)
  date_requested  DateTime 	@db.Date()
  project   Project  @relation(fields: [projectUuid], references: [uuid])
  projectUuid String 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("app_metrics")
}